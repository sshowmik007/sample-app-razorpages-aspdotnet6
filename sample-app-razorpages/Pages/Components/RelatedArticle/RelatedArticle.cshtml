@model sample_app_razorpages.Models.Article
@{
    Layout = null;
}

<div class="col-lg-3 col-md-6 col-sm-12">
    <div class="article-tile">
        <a asp-page="/Articles/Detail" asp-route-UrlPattern="@Model.UrlPattern">
            <img src="@Html.DisplayFor(modelItem => Model.TeaserImage.First().Url)" class="img-responsive"  />
        </a>

        <div class="article-tile-date">
            @Html.DisplayFor(modelItem => Model.PostDate)
        </div>

        <div class="article-tile-content">
            <h2 class="h4">
                <a asp-page="/Articles/Detail" asp-route-UrlPattern="@Model.UrlPattern">
                    @Html.DisplayFor(modelItem => Model.Title)
                </a>
            </h2>
            <p class="article-tile-text">
                @Html.DisplayFor(modelItem => Model.Summary)
            </p>
        </div>
    </div>
</div>


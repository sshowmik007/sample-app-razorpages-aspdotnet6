<!DOCTYPE html>
<html>
<head id="head">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="UTF-8" />
    <title>@ViewBag.Title - Dancing Goat</title>
    <link href="@Url.Content("~/Content/Styles/Site.css")" rel="stylesheet" type="text/css" />
    @RenderSection("headers", required: false)
</head>
<body>
    <div class="page-wrap">
        <header class="header" role="banner">
            <div class="menu">
                <div class="container">
                    <nav role="navigation">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Home/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Articles/Index">Articles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Coffees/Index">Coffees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/About/About">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Cafes/Index">Cafes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Contacts/Index">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Partnership/Index">Partnership</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="header-row">
                <div class="container">
                    <div class="col-xs-8 col-md-8 col-lg-4 logo">
                        <h1 class="logo">
                            <a class="logo-link" asp-area="" asp-page="/Index">Dancing Goat</a>
                        </h1>
                    </div>
                </div>
            </div>
        </header>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <div class="footer-wrapper">
        <footer role="contentinfo">
            <div class="footer-container">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-lg-4 footer-col">
                            @await Component.InvokeAsync("Contact")
                        </div>
                        <div class="col-md-4 col-lg-4 footer-col">
                            <h3>Follow Us On Social Media!</h3>
                            <a class="followus-link" href="https://www.facebook.com/Dancing.Goat" target="_blank">
                                <img alt="Follow Us On Facebook" class="" src="~/Content/Images/facebook-icon.png" title="Follow Us On Facebook">
                            </a>
                            <a class="followus-link" href="https://twitter.com/DancingGoat78" target="_blank">
                                <img alt="Follow Us On Twitter" class="" src="~/Content/Images/twitter-icon.png" title="Follow Us On Twitter">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container copyright">
                Copyright &copy; @DateTime.Now.Year Dancing Goat. All rights reserved.
            </div>
        </footer>
    </div>
    <script src="@Url.Content("/Scripts/jquery-3.1.1.js")"></script>
    <script src="@Url.Content("/Scripts/jquery.validate.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

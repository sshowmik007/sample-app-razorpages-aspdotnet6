@page "{UrlPattern}"
@model sample_app_razorpages.Pages.Articles.DetailModel
@using sample_app_razorpages.Models
@{
    ViewData["Title"] = Model.Article.Title;
}

    @if (Model.Article != null)
    {
        <article class="article-detail col-lg-9 col-md-12 article-detail-related-box">
            <h2>
                @Html.DisplayFor(modelItem => Model.Article.Title)
            </h2>
            <div class="article-detail-datetime">
                @Html.DisplayFor(modelItem => Model.Article.PostDate)
            </div>
            <div class="row">
                <div class="article-detail-image col-md-push-2 col-md-8">
                    <img class="img-responsive" src="@Html.DisplayFor(modelItem => Model.Article.TeaserImage.First().Url)" />
                </div>
            </div>
            <div class="row">
                <div class="article-detail-content">
                    @Html.DisplayFor(modelItem => Model.Article.BodyCopy)
                </div>
            </div>
        </article>
    }
    @if (Model.Article.RelatedArticles.Any())
    {
        <div class="article-related-articles">
            <h1 class="title-tab">Related Articles</h1>
            <div class="row">
                @foreach (Article linked_article in Model.Article.RelatedArticles)
                {
                    @await Component.InvokeAsync("RelatedArticle", linked_article)
                }
            </div>
        </div>
    }

<script src="https://platform.twitter.com/widgets.js"></script>


